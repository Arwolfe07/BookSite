<% layout('layouts/boilerplate_bootstrap') %>

    <div class="row">
        <h1 class="text-center">Edit</h1>
        <div class="col-md-6 offset-md-3">
            <form action="/books/<%= book._id %>?_method=PUT" method="POST" class="validated-form" novalidate>
                <div class="mb-3">
                    <label for="name" class="form-label">Name</label>
                    <input type="text" class="form-control" value="<%= book.name %> " name="book[name]" id="name"
                        required>
                    <div class="valid-feedback">
                        Looks good!
                    </div>
                </div>

                <div class="mb-3">
                    <label for="description" class="form-label" for="description">Description</label>
                    <textarea name="book[description]" class="form-control" id="description" rows="3"
                        required><%= book.description %></textarea>
                    <div class="valid-feedback">
                        Looks good!
                    </div>
                </div>
                <div class="mb-3">
                    <button class="btn btn-success">Edit</button>
                    <a class="btn btn-danger" href="/books" role="button">Cancel</a>
                </div>
            </form>
        </div>
    </div>

